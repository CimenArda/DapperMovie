@model List<Top10MovieListViewModel>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title">İlk 10 Film</div>
        </div>
        <div class="card-body">
            
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">Film Adı</th>
                        <th scope="col">Film Türü</th>
                        <th scope="col">Yayımlanan Dili</th>
                        <th scope="col">Bütçesi</th>
                        <th scope="col">Yayımlayan Şirket</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        
                  
                    <tr>
                        <td>@item.title</td>
                        <td>@item.genres</td>
                        <td>@item.spoken_languages</td>
                        <td>@item.budget</td>
                        <td>@item.production_companies</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>