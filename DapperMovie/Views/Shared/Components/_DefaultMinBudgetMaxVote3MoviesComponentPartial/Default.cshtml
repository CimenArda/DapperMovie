@model List<Top3LowestBudgetHighestVotesMovieViewModel>

    <div class="container">
        <h3>En Düşük Bütçeli Ve En Yüksek Oyu Alan 3 Film</h3>
    </div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card card-post card-round">
                <img class="card-img-top"
                     src="@item.poster_path"
                     alt="Card image cap" style="width:350px;height:300px;" />
                <div class="card-body">
                    <div class="d-flex">
                        <div class="avatar">
                            <img src="@item.backdrop_path"
                                 alt="..."
                                 class="avatar-img rounded-circle" />
                        </div>
                        <div class="info-post ms-2">
                            <p class="username">@item.Title</p>
                            <p class="date text-muted">@item.release_date.ToString("dd/M/yyyy")</p>
                        </div>
                    </div>
                    <div class="separator-solid"></div>
                    <p class="card-category text-info mb-1">
                        <a href="#">@item.genres</a>
                    </p>
                    <h3 class="card-title">
                        <a href="#"> @item.Title </a>
                    </h3>
                    <p class="card-text">
                      @item.overview
                    </p>
                </div>
            </div>
        </div>
    }
    


</div>
